@model ElectricState.ViewModels.Supplier.SupplierViewModel

<form asp-action="Create" method="post">

  
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="SupplierName"></label>
    <input type="text" asp-for="SupplierName" />
    <span asp-validation-for="SupplierName"></span>

    <label asp-for="SupplierAddress"></label>
    <input type="text" asp-for="SupplierAddress" />
    <span asp-validation-for="SupplierAddress"></span>

    <label asp-for="SupplierPhone"></label>
    <input type="text" asp-for="SupplierPhone" />
    <span asp-validation-for="SupplierPhone"></span>"

    <button type="submit">Create</button>


</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}