@model IEnumerable<ElectricState.Models.Category>

    @if(!Model.Any()){
    <p>No Categories Found</p>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
             
                <td>
                    <a asp-action="Update" asp-route-id="@category.CategoryId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>